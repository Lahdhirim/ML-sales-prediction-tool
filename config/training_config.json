{
    "train_data_path": "data/processed_data.csv",
    "splitter": {
        "min_training_months": 12, 
        "testing_months": 3
    },
    "features_selector": {
        "features_path": "config/features.json",
        "target_column": "future_transactions"
    },
    "models_params": {
        "MLModels": {
            "ElasticNet": {
                "enabled": true,
                "alpha": 1.0,
                "l1_ratio": 0.2
            },
            "LinearRegression": {
                "enabled": true
            },
            "RandomForest": {
                "enabled": true,
                "n_estimators": 100,
                "max_depth": 5,
                "random_state": 42
            },
            "XGBoost": {
                "enabled": true,
                "n_estimators": 100,
                "learning_rate": 0.01,
                "max_depth": 5,
                "random_state": 42
            }
        },
        "MLP": {
            "enabled": true,
            "hidden_layers_sizes": [100, 100],
            "activation_function": "relu",
            "solver": "adam",
            "max_iter": 10000,
            "early_stopping": true,
            "random_state": 42
        }
    },
    "raw_predictions_path": "data/output/raw_predictions.csv",
    "kpis_path": "data/output/KPIs.xlsx"
}